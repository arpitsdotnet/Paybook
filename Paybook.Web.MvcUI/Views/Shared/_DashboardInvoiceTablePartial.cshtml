@using Paybook.ServiceLayer.Models.Invoices;

@model IEnumerable<InvoiceModel>


@if (Model == null || Model.Count() == 0)
{
    <div class="alert alert-info">We did not find any invoice for you to work, you can <a class="alert-link" href="@Url.Action("Create","Invoice")">create a invoice</a> here.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.InvoiceNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InvoiceDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
                <th class="text-center">
                    @Html.DisplayNameFor(model => model.StatusId)
                </th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceDate)
                    </td>
                    <td>
                        ₹&nbsp;@Html.DisplayFor(modelItem => item.Total)
                    </td>
                    <td class="text-center">
                        @Html.Partial("_CategoryMasterBadgeColorPartial", item.StatusCategoryMaster)
                    </td>
                </tr>
            }
        </tbody>
    </table>
}
