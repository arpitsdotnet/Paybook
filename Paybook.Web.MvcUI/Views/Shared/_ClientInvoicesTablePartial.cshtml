@model  IEnumerable<Paybook.ServiceLayer.Models.InvoiceModel>

<div class="p-2" style="background-color:#FFF;">
    @if (Model == null || Model.Count() == 0)
    {
        <div class="alert alert-info">We did not find any invoice for the client.</div>
    }
    else
    {
        <table class="table table-striped table-hover ">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.InvoiceNumber)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Description)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.InvoiceDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.DueDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.StatusId)
                    </th>
                    @*<th class="text-right">
                            @Html.DisplayNameFor(model => model.TaxableTotal)
                        </th>*@
                    <th class="text-right">
                        @Html.DisplayNameFor(model => model.Total)
                    </th>
                    @*<th>
                            @Html.DisplayNameFor(model => model.CreateBy)
                        </th>*@
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Description)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.InvoiceDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.DueDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.StatusCategoryMaster.Name)
                    </td>
                    @*<td class="text-right">
                            ₹&nbsp;@Html.DisplayFor(modelItem => item.TaxableTotal)
                        </td>*@
                    <td class="text-right">
                        ₹&nbsp;@Html.DisplayFor(modelItem => item.Total)
                    </td>
                    @*<td>
                            @Html.DisplayFor(modelItem => item.CreateBy)
                        </td>*@
                </tr>
            }

        </table>
    }
</div>