@model IEnumerable<Paybook.ServiceLayer.Models.InvoicePayModel>

@if (Model == null || Model.Count() == 0)
{
    <div class="alert alert-info">We did not find any payment for this invoice.</div>
}
else
{
    <div class="" style="background-color:white;overflow:auto;">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-right">
                        #
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PayDate)
                    </th>
                    <th class="text-right">
                        @Html.DisplayNameFor(model => model.PayAmount)
                    </th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-right">
                            @Html.DisplayFor(modelItem => item.Id)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.PayDate)
                        </td>
                        <td class="text-right">
                            ₹ @Html.DisplayFor(modelItem => item.PayAmount)
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}