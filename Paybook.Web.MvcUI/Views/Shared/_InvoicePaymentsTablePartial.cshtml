@model IEnumerable<Paybook.ServiceLayer.Models.PaymentModel>

@if (Model == null || Model.Count() == 0)
{
    <div class="alert alert-info">We did not find any payment for this invoice.</div>
}
else
{
    <div class="" style="background-color:white;overflow:auto;">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-right">
                        #
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.PaymentDate)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsSuccess)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.IsRefund)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Method)
                    </th>
                    <th class="text-right">
                        @Html.DisplayNameFor(model => model.Amount)
                    </th>
                </tr>
            </thead>

            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Id)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.PaymentDate)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsSuccess)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.IsRefund)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Method)
                    </td>
                    <td class="text-right">
                        ₹ @Html.DisplayFor(modelItem => item.Amount)
                    </td>
                </tr>
            }

        </table>
    </div>
}