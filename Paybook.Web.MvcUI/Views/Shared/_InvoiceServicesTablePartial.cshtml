@model IEnumerable<Paybook.ServiceLayer.Models.Invoices.InvoiceServiceModel>

@if (Model != null && Model.Count() > 0)
{
    <div style="background-color:white;overflow:auto;">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-right">
                        #
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WorkTypeId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VehicleNumber)
                    </th>
                    <th class="text-right">
                        @Html.DisplayNameFor(model => model.Qty)
                    </th>
                    <th class="text-right">
                        @Html.DisplayNameFor(model => model.Rate)
                    </th>
                    <th class="text-right">
                        @Html.DisplayNameFor(model => model.Subtotal)
                    </th>
                    <th class="text-right">
                        Tax
                    </th>
                    <th class="text-right">Action</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td class="text-right">
                            @Html.DisplayFor(modelItem => item.OrderBy)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.WorkTypeCategoryMaster.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.Name)
                        </td>
                        <td>
                            @Html.DisplayFor(modelItem => item.VehicleNumber)
                        </td>
                        <td class="text-right">
                            @Html.DisplayFor(modelItem => item.Qty)
                        </td>
                        <td class="text-right">
                            ₹ @Html.DisplayFor(modelItem => item.Rate)
                        </td>
                        <td class="text-right">
                            ₹ @Html.DisplayFor(modelItem => item.Subtotal)
                        </td>
                        <td class="text-right">
                            ₹ @Html.DisplayFor(modelItem => item.TaxableTotal)
                        </td>
                        <td class="text-right">
                            <button type="button" class="btn btn-danger btn-xs" title="Delete Product/Service" onclick="window.location.href='@Url.Action("Delete","InvoiceService", new { area = "Chief", id = item.OrderBy })';"><i class="glyphicon glyphicon-trash"></i></button>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
}