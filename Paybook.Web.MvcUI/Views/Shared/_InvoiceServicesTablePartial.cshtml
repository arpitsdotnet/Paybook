@model IEnumerable<Paybook.ServiceLayer.Models.InvoiceServiceModel>

@if (Model != null && Model.Count() > 0)
{
    <div class="" style="background-color:white;overflow:auto;">
        <table class="table table-bordered table-striped table-hover">
            <thead>
                <tr>
                    <th class="text-right">
                        @Html.DisplayNameFor(model => model.OrderBy)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.Name)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.WorkTypeId)
                    </th>
                    <th>
                        @Html.DisplayNameFor(model => model.VehicleNumber)
                    </th>
                    <th class="text-right">
                        @Html.DisplayNameFor(model => model.Qty)
                    </th>
                    <th class="text-right">
                        @Html.DisplayNameFor(model => model.Rate)
                    </th>
                    <th class="text-right">
                        @Html.DisplayNameFor(model => model.Subtotal)
                    </th>
                    <th class="text-right">
                        Tax
                    </th>
                    <th>Action</th>
                </tr>
            </thead>
            @foreach (var item in Model)
            {
                <tr>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.OrderBy)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.WorkTypeCategoryMaster.Name)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.VehicleNumber)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Qty)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Rate)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.Subtotal)
                    </td>
                    <td class="text-right">
                        @Html.DisplayFor(modelItem => item.TaxableTotal)
                    </td>
                    <td>
                        @Html.ActionLink("Delete", "Delete", "InvoiceService", new { area = "Chief", id = item.OrderBy }, new { })
                    </td>
                </tr>
            }

        </table>
    </div>
}