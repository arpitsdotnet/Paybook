@model IEnumerable<Paybook.ServiceLayer.Models.InvoiceModel>

@{
    ViewBag.Title = "Invoice List";
}

@Html.Partial("_ListHeaderPagePartial", "INVOICE LIST")

@if (Model != null && Model.Count() > 0)
{
    if (Model.First().IsSucceeded == true)
    {
        <div class="alert alert-success">@Model.First().ReturnMessage</div>
    }
    else if (!string.IsNullOrEmpty(Model.First().ReturnMessage))
    {
        <div class="alert alert-danger">@Model.First().ReturnMessage</div>
    }
}

@if (Model == null || Model.Count() == 0)
{
    <div class="alert alert-info">We did not find any invoice for you to work, you can <a class="alert-link" href="@Url.Action("Create")">create a invoice</a> here.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.InvoiceNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClientId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.ClientEmail)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.InvoiceDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.DueDate)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StatusId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsOverdue)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Total)
                </th>
                @*<th>
                        @Html.DisplayNameFor(model => model.CreateBy)
                    </th>*@
                <th></th>
            </tr>
        </thead>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Clients.Name)
                    <a href="@Url.Action("Edit","Client",new { area = "Chief"})/@item.ClientId" class="btn btn-link"><i class="glyphicon glyphicon-pencil"></i></a>
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ClientEmail)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.InvoiceDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DueDate)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StatusCategoryMaster.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsOverdue)
                </td>
                <td>
                    ₹&nbsp;@Html.DisplayFor(modelItem => item.Total)
                </td>
                @*<td>
                        @Html.DisplayFor(modelItem => item.CreateBy)
                    </td>*@
                <td>
                    @Html.ActionLink("Details", "Details", new { id = item.Id }) |
                    @Html.ActionLink("Edit", "Edit", new { id = item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}