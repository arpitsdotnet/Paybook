@model Paybook.Web.MvcUI.Models.ViewModels.BusinessViewModel

@{
    ViewBag.Title = "Create a Business";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()

    <div class="row bg-default container-fluid">
        <div class="col-lg-3">
            <h3 class="bold"><i class="glyphicon glyphicon-time"></i>&nbsp; BUSINESS CREATE</h3>
        </div>
        <div class="col-lg-offset-6 col-lg-3 text-right">
            <div class="btn-group pt-3">
                <a href="@Url.Action("Index")" class="btn btn-default btn-lg"><i class="glyphicon glyphicon-remove-circle"></i>&nbsp; CANCEL</a>
                <button type="submit" class="btn btn-primary btn-lg"><i class="glyphicon glyphicon-ok-circle"></i>&nbsp; SAVE</button>
            </div>
        </div>
    </div>

    <div class="form-horizontal">
        <hr />
        @if (Model.Business != null)
        {
            if (Model.Business.IsSucceeded == true)
            {
                <div class="alert alert-success">@Model.Business.ReturnMessage</div>
            }
            else if (!string.IsNullOrEmpty(Model.Business.ReturnMessage))
            {
                <div class="alert alert-danger">@Model.Business.ReturnMessage</div>
            }
        }

        @Html.ValidationSummary(true, "", new { @class = "text-danger" })

        <div class="form-group">
            @Html.LabelFor(model => model.Business.Name, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Business.Name, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Business.Name, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Business.Description, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Business.Description, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Business.Description, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Business.PhoneNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Business.PhoneNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Business.PhoneNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Business.Email, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Business.Email, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Business.Email, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Business.AddressLine1, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Business.AddressLine1, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Business.AddressLine1, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Business.AddressLine2, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Business.AddressLine2, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Business.AddressLine2, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Business.City, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Business.City, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Business.City, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Business.StateId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.DropDownListFor(model => model.Business.StateId, Model.States, htmlAttributes: new { @class = "form-control" })
                @*@Html.EditorFor(model => model.Business.StateId, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.Business.StateId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Business.CountryId, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.DropDownListFor(model => model.Business.CountryId, Model.Countries, htmlAttributes: new { @class = "form-control" })

                @*<select id="ddlCategory" asp-for="@Model.Business.CountryId" asp-items="Model.coun.ToSelectListItem(Model.MenuItem.CategoryId)" class="form-control"></select>
                    @Html.DropDownListFor(model => model.Countries,, new { htmlAttributes = new { @class = "form-control" } })*@
                @Html.ValidationMessageFor(model => model.Business.CountryId, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Business.Pincode, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Business.Pincode, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Business.Pincode, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            @Html.LabelFor(model => model.Business.GSTNumber, htmlAttributes: new { @class = "control-label col-md-2" })
            <div class="col-md-2">
                @Html.EditorFor(model => model.Business.GSTNumber, new { htmlAttributes = new { @class = "form-control" } })
                @Html.ValidationMessageFor(model => model.Business.GSTNumber, "", new { @class = "text-danger" })
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-1">
                <input type="submit" value="Save" class="btn btn-primary form-control" />
            </div>
            <div class="col-md-2 pt-3">
                @Html.ActionLink("Cancel", "Index")
            </div>
        </div>
    </div>
}
