@model IEnumerable<Paybook.ServiceLayer.Models.BusinessModel>

@{
    ViewBag.Title = "Business List";
}

@Html.Partial("_PageHeaderListPartial", "BUSINESS LIST")

@if (Model != null && Model.Count() > 0)
{
    if (Model.First().IsSucceeded == true)
    {
        <div class="alert alert-success">@Model.First().ReturnMessage</div>
    }
    else if (!string.IsNullOrEmpty(Model.First().ReturnMessage))
    {
        <div class="alert alert-danger">@Model.First().ReturnMessage</div>
    }
}

@if (Model == null || Model.Count() == 0)
{
    <div class="alert alert-info">We did not find any business for you to work, you can <a class="alert-link" href="@Url.Action("Create")">create a business</a> here.</div>
}
else
{
    <table class="table table-striped table-hover">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Image)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Description)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.IsSelected)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.PhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.Email)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.GSTNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.StateId)
                </th>
                <th class="text-right">ACTION</th>
            </tr>
        </thead>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Image)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Name)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Description)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.IsSelected)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.PhoneNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.Email)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.GSTNumber)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.StateMaster.Name), @Html.DisplayFor(modelItem => item.CountryMaster.Name)
                </td>
                <td class="text-right">
                    <div class="btn-group">
                        @Html.Partial("_ListDefaultButtonsPartial", item.Id)
                    </div>
                </td>
            </tr>
        }

    </table>
}
